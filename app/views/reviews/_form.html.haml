= form_for @review do |f|
  - if @review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@review.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - @review.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :movie
    %p= @review.movie.title
    = f.hidden_field :movie_id, value: @review.movie.id
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
